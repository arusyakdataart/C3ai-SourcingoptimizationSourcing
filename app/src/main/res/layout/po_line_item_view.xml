<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_16dp"
        android:background="@drawable/card_background">

        <com.c3ai.sourcingoptimization.common.InterTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PO Line 453425"
            android:textSize="@dimen/text_12"
            android:textColor="@color/grey"
            android:layout_marginBottom="@dimen/margin_8dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$ 8,000"
                android:textSize="@dimen/text_20"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/alert_white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin_8dp">

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textColor="@color/green_1"
                android:textSize="@dimen/text_14"/>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" \u2022 Unit Price $33.5"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/text_14"/>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" \u2022 Quantity 238"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/text_14"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin_16dp"
            android:weightSum="3">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opened Date"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/04/2021"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey_2"
                    android:layout_marginBottom="@dimen/margin_8dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lead Time\n"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 days (Act.)"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey_2"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 days (Plan)"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closed Date"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey_2"
                    android:layout_marginBottom="@dimen/margin_8dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested\nDelivery Date"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/1/2021"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey_2"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey_2"
                    android:layout_marginBottom="@dimen/margin_8dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promised\nDelivery Date"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/1/2021"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/grey_2"
                    android:layout_marginBottom="@dimen/margin_4dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include layout="@layout/divider"/>

        <com.c3ai.sourcingoptimization.common.InterTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERY FACILITY"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_12"
            android:layout_marginTop="@dimen/margin_32dp"
            android:layout_marginBottom="@dimen/margin_16dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_24dp">

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="DF"
                android:gravity="center"
                android:background="@drawable/round_grey_background"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/text_20"
                android:layout_marginEnd="@dimen/margin_16dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facility Name"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/text_16"/>

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 Main St. San Francisco, US"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/grey"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.c3ai.sourcingoptimization.common.InterTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expendCollapse"
            android:text="Collapse "
            android:textColor="@color/blue_1"
            android:textSize="@dimen/text_16"
            android:drawableEnd="@drawable/arrow_up"
            android:paddingVertical="@dimen/margin_8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableContent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_16dp">

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUYER B351245"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_32dp"
                android:paddingTop="@dimen/margin_16dp">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="WD"
                    android:gravity="center"
                    android:background="@drawable/round_grey_background"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/text_20"
                    android:layout_marginEnd="@dimen/margin_16dp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wilson Donin"
                        android:textColor="@color/grey_2"
                        android:textSize="@dimen/text_16"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facility Name"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/grey"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/person_card"
                    android:layout_gravity="center_vertical"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <include layout="@layout/divider"/>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUPPLIER 352532"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12"
                android:layout_marginTop="@dimen/margin_32dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_16dp">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="AB"
                    android:gravity="center"
                    android:background="@drawable/round_grey_background"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/text_20"
                    android:layout_marginEnd="@dimen/margin_16dp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC Inc."
                        android:textColor="@color/grey_2"
                        android:textSize="@dimen/text_16"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chickago, US"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/grey"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/person_card"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_16dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/alert"
                    android:layout_gravity="center_vertical"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>