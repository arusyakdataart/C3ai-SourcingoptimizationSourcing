<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingVertical="@dimen/margin_24dp"
        android:paddingHorizontal="@dimen/margin_16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/margin_16dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_16dp">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"/>

                <FrameLayout
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginStart="@dimen/margin_16dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/alert_white"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:id="@+id/alertsCount"
                        android:layout_width="12dp"
                        android:layout_height="13dp"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

                </FrameLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/margin_16dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_16dp">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saving Opportunity"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/margin_16dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/savingPrice"
                        android:textColor="@color/grey_2"
                        android:textSize="@dimen/text_12"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:layout_marginStart="@dimen/margin_16dp"/>

                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/gradientChart"
                        android:layout_marginEnd="@dimen/margin_16dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="Last 30 days"
                        android:textSize="@dimen/text_10"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:layout_marginStart="@dimen/margin_16dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suppliers\nwith contract"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/suppliers"
                        android:textColor="@color/grey_2"
                        android:textSize="@dimen/text_12"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <include layout="@layout/divider"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_16dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed POL\nValue"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/closedValue"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey_2"
                        android:layout_marginBottom="@dimen/margin_16dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Price"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lastPrice"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey_2"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open POL\nValue"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/openValue"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey_2"
                        android:layout_marginBottom="@dimen/margin_16dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg. Price"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/avgPrice"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey_2"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last 12 mos"
                        android:textSize="@dimen/text_10"
                        android:textColor="@color/grey"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventory\n"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/inventory"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey_2"
                        android:layout_marginBottom="@dimen/margin_16dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lowest Price"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lowestPrice"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/grey_2"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last 12 mos"
                        android:textSize="@dimen/text_10"
                        android:textColor="@color/grey"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:paddingVertical="@dimen/margin_16dp">

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sourcing Analysis"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:id="@+id/totalSharespinner"
                android:backgroundTint="@color/grey_3"
                android:layout_margin="@dimen/margin_16dp"/>

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/barChartView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginHorizontal="@dimen/margin_4dp"/>

            <include layout="@layout/divider"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_marginHorizontal="@dimen/margin_16dp">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Supplier"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_16"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/more_vert"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 2021"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:paddingVertical="@dimen/margin_16dp"
                android:layout_marginHorizontal="@dimen/margin_16dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:text="IJK"
                        android:textColor="@color/grey_2"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:text="$32"
                        android:textColor="@color/grey_2"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:text="ETW"
                        android:textColor="@color/grey_2"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:text="$32"
                        android:textColor="@color/grey_2"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:text="ABC"
                        android:textColor="@color/grey_2"/>

                    <com.c3ai.sourcingoptimization.common.InterTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:text="$32"
                        android:textColor="@color/grey_2"
                        android:layout_marginBottom="@dimen/margin_4dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <include layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_marginHorizontal="@dimen/margin_16dp">

                <com.c3ai.sourcingoptimization.common.InterTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Index"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_16"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/more_vert"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 2021"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steel"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <com.c3ai.sourcingoptimization.common.InterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$32"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/text_12"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"/>

            <include layout="@layout/divider"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_16dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_4dp"
                android:background="@drawable/graph_background"
                android:layout_marginHorizontal="@dimen/margin_16dp">

                <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                    android:id="@+id/lineChartView"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"/>

                <include layout="@layout/divider"/>

                <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                    android:id="@+id/dashedLineChartView"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_marginVertical="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
